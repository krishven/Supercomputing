#include <cilk.h>
int nCr( int n, int r )
{
if ( r > n ) return 0;
if ( ( r == 0 ) || ( r == n ) ) return 1;
int x, y;
x = cilk_spawn nCr( n - 1, r - 1 );
y = nCr( n - 1, r );
cilk_sync;
return ( x + y );
}
void swap(int &n, int &r) {
	int temp = n;
	n = r;
	r = temp;
}
extern "C++" int swap_cpp( int &n, int &r )
{
return cilk::run( swap, n, r );
}
